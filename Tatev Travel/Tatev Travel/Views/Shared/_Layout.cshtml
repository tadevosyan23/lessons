<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="navbar-fixed-top">
        <div class="container">
            <div class="brand">
                <div class="brand-name">
                    <span>Tatev Travel Agency</span>
                </div>
                <a href="~/Home"><div class="logo"></div></a>

            </div>

            <nav>
                <ul>
                    <li>
                        <a href="#">Tours <i class="fa fa-chevron-down" aria-hidden="true"></i></a>
                        <ul class="dropdown">
                            <li><a href="~/Home/DailyTours">Daily Tours</a></li>
                            <li><a href="~/Home/ClassicTours">Classic Tours</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">Services <i class="fa fa-chevron-down" aria-hidden="true"></i></a>
                        <ul class="dropdown">
                            <li><a href="#">Transfers</a></li>
                            <li><a href="#">Visa Pickup</a></li>

                        </ul>
                    </li>
                    <li>
                        <a href="#">Hotel / Apartment <i class="fa fa-chevron-down" aria-hidden="true"></i></a>
                        <ul class="dropdown">
                            <li><a href="#">Hotel</a></li>
                            <li><a href="#">Apartment</a></li>
                        </ul>
                    </li>
                    <li><a href="#">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>










    <div class="body-content">
        @RenderBody()
        
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
